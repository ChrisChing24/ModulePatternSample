<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.lilyround.chris.lib_common.view.circlewaveview.RingView
            android:id="@+id/ring_view"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center" />

        <com.lilyround.chris.lib_common.view.circlewaveview.BallView
            android:id="@+id/ball_view"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center" />

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rl_container"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center">

            <com.lilyround.chris.lib_common.view.circlewaveview.WaveView
                android:id="@+id/wave_view"
                android:layout_width="62dp"
                android:layout_height="62dp" />

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连送"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>


</android.support.constraint.ConstraintLayout>